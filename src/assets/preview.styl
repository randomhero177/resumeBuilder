.preview
  &__item
    margin-bottom 30px
  &-header
    margin-bottom 2rem
    &__name
      font-size 2.75rem
    &__position
      font-size 1.2rem
    &__ava
      width 200px
      border-radius 5px
  &__title
    font-size 1.5rem
    margin-bottom 15px
  &__subtitle
    font-size 1.2rem
    font-weight bold
  &__icon
    font-size 1.25rem
    position relative
    top -2px
  &__key
    color grey
    margin-right 5px
  &__link
    color #00b0ff
  &-expirience
    &__item
      margin-bottom 30px
  &__subitem
    margin-bottom 7.5px
  &-functional
    &__name
      padding 30px 0
      color #fff
      background #404040
    & .preview__key
      color #fff
      font-weight bold
    & .preview__icon
      display none
    & .preview__title
      text-align center
    & .preview__subtitle
      font-size 1rem
    & .slider__label
      display none
    & .preview-expirience__item ul, & .preview-expirience__item ol
      list-style none
    & .preview-expirience__item li
      position relative
      padding-right 15px
    & .preview-expirience__item li:after
        content ''
        display block
        border-radius 100%
        width 5px
        height 5px
        background #fff
        top 10px
        right 0
        position absolute
    & .preview__link
      color #2e74b5
    & .preview-expirience__item .preview__key
      font-weight normal
      font-style italic