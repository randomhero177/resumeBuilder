.modal
  position fixed
  width 100%
  height 100%
  background rgba(0, 0, 0, .5)
  display flex
  justify-content center
  align-items center
  &__container
    max-width 50%
    text-align center
    background #fff
    padding 45px
    border-radius 5px
    position relative
  &__btn
    border 0
    padding 15px 30px
    color #fff
    cursor pointer
    &_remove
      border 1px solid #927c7c
      color #927c7c
    &_add
      border 1px solid #366d5b
      background #366d5b
    &_login
      border 1px solid #ee7856
      background #ee7856
  &__btn + &__btn
    margin-left 30px
  &__buttons
    margin-top 45px