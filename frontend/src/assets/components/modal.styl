.modal
  position fixed
  width 100%
  height 100%
  background rgba(0, 0, 0, .5)
  display flex
  justify-content center
  align-items center
  z-index 9
  &__container
    max-width 50%
    text-align center
    background #fff
    padding 45px
    border-radius 5px
    position relative
  &__btn
    border 0
    padding 15px 30px
    color #000
    cursor pointer
    &_remove
      border 1px solid #927c7c
      color #927c7c
    &_add
      border 1px solid #366d5b
      background #366d5b
      color #fff
    &_login
      border 1px solid #ee7856
      background #ee7856
      color #fff
  &__btn + &__btn
    margin-left 30px
  &__btn_sm + &__btn_sm
    margin-left 10px
  &__buttons
    margin-top 45px
  &__icon
    &_close
      cursor pointer
      position absolute
      font-size 20px
      top 5px
      right 10px